#include <stdio.h>

int main() {
    int customerID, units;
    char name[50], phone[15], type;
    float bill = 0;

    printf("=== Electricity Bill Generator ===\n\n");

    printf("Enter Customer ID: ");
    scanf("%d", &customerID);

    printf("Enter Customer Name: ");                
    scanf("%s", name);

    printf("Enter Telephone Number: ");
    scanf("%s", phone);

    printf("Enter Customer Type (D = Domestic, C = Commercial): ");
    scanf(" %c", &type);

    printf("Enter Units Consumed: ");
    scanf("%d", &units);

   
    if(type == 'D' || type == 'd') {  
        if(units <= 100)
            bill = units * 2.0;
        else if(units <= 300)
            bill = (100 * 2.0) + (units - 100) * 3.5;
        else
            bill = (100 * 2.0) + (200 * 3.5) + (units - 300) * 5.0;
    }
    else if(type == 'C' || type == 'c') { 
        if(units <= 100)
            bill = units * 3.5;
        else if(units <= 300)
            bill = (100 * 3.5) + (units - 100) * 5.0;
        else
            bill = (100 * 3.5) + (200 * 5.0) + (units - 300) * 7.0;
    } else {
        printf("\nInvalid customer type! Bill cannot be calculated.\n");
        return 0;
    }

   
    printf("\n===== ELECTRICITY BILL =====\n");
    printf("Customer ID       : %d\n", customerID);
    printf("Customer Name     : %s\n", name);
    printf("Telephone Number  : %s\n", phone);
    printf("Customer Type     : %c\n", type);
    printf("Units Consumed    : %d\n", units);
    printf("----------------------------------\n");
    printf("Total Bill Amount : Rs. %.2f\n", bill);
    printf("==================================\n");

    return 0;
}
