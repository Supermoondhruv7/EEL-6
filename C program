#include <stdio.h>
int main()
{
    int bookID[50];
    int copies[50];
    char title[50][50];
    int count = 0;
    int choice, id, i;
    
    while (1) 
    {

        printf("\n===== BASIC LIBRARY SYSTEM =====\n");
        printf("1. Add Book\n");
        printf("2. View Books\n");
        printf("3. Issue Book\n");
        printf("4. Return Book\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        
        if (choice == 1) 
        {
            printf("\nEnter Book ID: ");
            scanf("%d", &bookID[count]);
            printf("Enter Book Title: ");
            scanf("%s", title[count]);  
            printf("Enter Number of Copies: ");
            scanf("%d", &copies[count]);
            count++;
            printf("Book Added Successfully!\n");
        }
        
        else if (choice == 2)
        {
            printf("\n--- BOOK LIST ---\n");
            if (count == 0) 
            {
                printf("No books available!\n");
            } else 
            {
                for (i = 0; i < count; i++) 
                {
                    printf("ID: %d | Title: %s | Copies: %d\n", 
                           bookID[i], title[i], copies[i]);
                }
            }
        }
        
        else if (choice == 3) 
        {
            printf("\nEnter Book ID to Issue: ");
            scanf("%d", &id);
            
            int found = 0;
            for (i = 0; i < count; i++) 
            {
                if (bookID[i] == id) 
                {
                    found = 1;
                    if (copies[i] > 0) 
                    {
                        copies[i]--;
                        printf("Book Issued Successfully!\n");
                    } else {
                        printf("Book Out of Stock!\n");
                    }
                    break;
                }
            }
            if (!found)
                printf("Book Not Found!\n");
        }
        
        else if (choice == 4) 
        {
            printf("\nEnter Book ID to Return: ");
            scanf("%d", &id);
            
            int found = 0;
            for (i = 0; i < count; i++) 
            {
                if (bookID[i] == id) 
                {
                    found = 1;
                    copies[i]++;
                    printf("Book Returned Successfully!\n");
                    break;
                }
            }
            if (!found)
                printf("Book Not Found!\n");
        }
        
        else if (choice == 5) 
        {
            printf("\nExiting...\n");
            break;
        }
        
        else 
        {
            printf("Invalid Choice!\n");
        }
    }

    return 0;
}
